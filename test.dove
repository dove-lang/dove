fun create_multiplier(scale) {
    return lambda x -> {
        let res = 0

        let i = 0
        while i < scale {
            res = res + x
            i = i + 1
        }

        return res
    }
}

let doubler = create_multiplier(2)
let tripler = create_multiplier(3)

print doubler(3)
print tripler(2)
print tripler(doubler(2))
